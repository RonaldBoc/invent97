<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title ? `${title} · invent97` : 'invent97' %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body class="bg-slate-100 text-slate-900 min-h-screen">
    <header class="bg-white border-b border-slate-200">
      <div class="max-w-6xl mx-auto px-6 py-4 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:gap-6">
          <a href="/" class="text-2xl font-semibold text-indigo-600">invent97</a>
          <% if (authenticated) { %>
            <nav class="flex flex-wrap items-center gap-4 text-sm">
              <a
                href="/"
                class="transition-colors <%= currentPath.startsWith('/employes') || currentPath.startsWith('/types') || currentPath.startsWith('/statistiques') ? 'text-slate-500 hover:text-indigo-600' : 'text-indigo-600 font-semibold' %>"
              >
                Inventaire
              </a>
              <a
                href="/statistiques"
                class="transition-colors <%= currentPath.startsWith('/statistiques') ? 'text-indigo-600 font-semibold' : 'text-slate-500 hover:text-indigo-600' %>"
              >
                Statistiques
              </a>
              <a
                href="/employes"
                class="transition-colors <%= currentPath.startsWith('/employes') ? 'text-indigo-600 font-semibold' : 'text-slate-500 hover:text-indigo-600' %>"
              >
                Employés
              </a>
              <a
                href="/types"
                class="transition-colors <%= currentPath.startsWith('/types') ? 'text-indigo-600 font-semibold' : 'text-slate-500 hover:text-indigo-600' %>"
              >
                Types de matériel
              </a>
            </nav>
          <% } %>
        </div>
        <% if (authenticated) { %>
          <div class="flex items-center gap-4 text-sm text-slate-600">
            <span>Connecté en tant que <strong><%= username %></strong></span>
            <a href="/logout" class="text-indigo-600 hover:text-indigo-700 font-medium">Déconnexion</a>
          </div>
        <% } %>
      </div>
    </header>
    <main class="max-w-6xl mx-auto px-6 py-8">
      <% if (bodyView) { %>
        <%- include(bodyView, bodyData || {}) %>
      <% } else if (typeof renderBody === 'function') { %>
        <% renderBody(); %>
      <% } %>
    </main>
    <footer class="bg-white border-t border-slate-200 mt-16">
      <div class="max-w-6xl mx-auto px-6 py-4 text-xs text-slate-500">
        invent97 · Gestion d'inventaire informatique
      </div>
    </footer>
  </body>
</html>
